<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.winterhaven-mc</groupId>
	<artifactId>SavageDeathCompass</artifactId>
	<version>1.13.1</version>
	<name>SavageDeathCompass</name>
	<url>http://dev.bukkit.org/bukkit-plugins/savagedeathcompass/</url>
	<description>An alternative to /back on death command. On death, players are given a compass that points to their death location.</description>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.author>Tim Savage</project.author>
	</properties>
	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>

		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<version>2.4.3</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
						<configuration>
							<minimizeJar>true</minimizeJar>
							<artifactSet>
								<includes>
									<include>com.winterhaven-mc:string-util-lib</include>
									<include>com.winterhaven-mc:world-manager-lib</include>
									<include>com.winterhaven-mc:language-manager-lib</include>
								</includes>
							</artifactSet>
						</configuration>
					</execution>
				</executions>
			</plugin>
        </plugins>
	</build>

	<!-- Repositories -->
	<repositories>
		<repository>
			<id>winterhaven-repo</id>
			<url>https://nexus-winterhaven.rhcloud.com/content/groups/public/</url>
		</repository>

		<repository>
			<!-- exclude defunct repo -->
			<id>vault-repo</id>
			<url>http://nexus.theyeticave.net/content/repositories/pub_releases/</url>
			<releases>
				<enabled>false</enabled>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
	</repositories>

	<dependencies>

		<!-- Bukkit -->
		<dependency>
			<groupId>org.bukkit</groupId>
			<artifactId>bukkit</artifactId>
			<version>1.13.1-R0.1-SNAPSHOT</version>
		</dependency>

		<!-- WorldManagerLib -->
		<dependency>
			<groupId>com.winterhaven-mc</groupId>
			<artifactId>world-manager-lib</artifactId>
			<version>1.0.1</version>
		</dependency>

		<!-- StringUtilLib -->
		<dependency>
			<groupId>com.winterhaven-mc</groupId>
			<artifactId>string-util-lib</artifactId>
			<version>1.0.2</version>
		</dependency>

		<!-- SoundManagerLib -->
		<dependency>
			<groupId>com.winterhaven-mc</groupId>
			<artifactId>sound-manager-lib</artifactId>
			<version>1.0.4</version>
		</dependency>
	</dependencies>
</project>